# sudo cp figtree.service /etc/systemd/system; sudo systemctl enable --now figtree.service
[Unit]
Description=figtree.service
Wants=remote-fs.target
After=network-online.target

[Service]
User=hyperuser
Group=hyperuser
Type=exec
TimeoutStartSec=86400
TimeoutStopSec=122
ExecStart=/home/hyperuser/bin/figtreeservice start
ExecStop=/home/hyperuser/bin/figtreeservice stop
[Install]
WantedBy=remote-fs.target